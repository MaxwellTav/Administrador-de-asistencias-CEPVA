<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEPVA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Administrador_de_asistencias_CEPVA.styles.css" asp-append-version="true" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">



</head>
<body>

    <!-- Navbar -->
    @if (!ViewBag.HideNavbar)
    {
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @if (!ViewBag.HideSidebar)
                    {
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    }
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Inicio</a>
                </li>
            </ul>

            <!-- Dropdown - User Information -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <button class="btn btn-white dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user me-2"></i> John Doe
                    </button>
                    <ul class="dropdown-menu p-3 shadow" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index","User")"><i class="fas fa-user me-2"></i>Perfíl</a></li>
                        <li><a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index", "Login")"><i class="fas fa-power-off me-2"></i>Salir</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <style>
            .navbar .dropdown .btn {
                padding: 0;
                height: 100%;
                display: flex;
                align-items: center;
            }

                .navbar .dropdown .btn img {
                    width: 24px;
                    height: 24px;
                    margin-right: 5px;
                }

            .navbar .btn {
                transform: translateX(-20px);
            }

            .navbar .dropdown-menu {
                transform: translateX(-60px);
            }
        </style>
    }

    <!-- Sidebar -->
    @if (!ViewBag.HideSidebar)
    {
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <span class="brand-text font-weight-light">CEPVA</span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">



  <li class="nav-item">
    <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#submenu-estudiantes" aria-expanded="false">
        <i class="fas fa-graduation-cap nav-icon"></i>
        <p>
            Estudiantes
            <i class="right fas fa-angle-down"></i>
        </p>
    </a>
    <ul class="collapse" id="submenu-estudiantes">
        <li class="nav-item">
            <a href="@Url.Action("Index", "CreateStudent")" class="nav-link">
                <i class="fas fa-user-plus nav-icon"></i>
                <p>Agregar</p>
            </a>
        </li>
        <li class="nav-item">
            <a href="@Url.Action("Index", "Student")" class="nav-link">
                <i class="fas fa-search nav-icon"></i>
                <p>Buscar</p>
            </a>
        </li>
    </ul>
</li>




                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Attendance")" class="nav-link">
                                <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                <p>Asistencia</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Teacher")" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Docente</p>
                            </a>
                        </li>



                        <li class="nav-item">
                            <a href="@Url.Action("Index", "User")" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Usuario</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Admin")" class="nav-link">
                                <i class="nav-icon fas fa-user-shield"></i>
                                <p>Administrador</p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Classroom")" class="nav-link">
                                <i class="nav-icon fas fa-school"></i>
                                <p>Aulas</p>
                            </a>
                        </li>

                 
                    </ul>
                </nav>
            </div>
        </aside>
    }

    @RenderBody()

    <!-- Footer -->
    @if (!ViewBag.HideFooter)
    {
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">...</div>
            <strong>Copyright &copy; 2024 The Proxtys.</strong> Todos los derechos son reservados.
        </footer>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

    <script>
        window.addEventListener('load', function () {
            // Ocultar elementos según ViewBag
            var hideSidebar = @Json.Serialize(ViewBag.HideSidebar ?? false);
            var hideNavbar = @Json.Serialize(ViewBag.HideNavbar ?? false);

            if (hideSidebar) {
                document.querySelector('[data-widget="pushmenu"]')?.click();
            }
            if (hideNavbar) {
                document.querySelector('.main-header')?.style.display = 'none';
            }
        });
    </script>
</body>
</html>
